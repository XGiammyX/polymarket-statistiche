{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    { "path": "/api/cron/sync", "schedule": "*/10 * * * *" },
    { "path": "/api/cron/compute", "schedule": "5-59/10 * * * *" },
    { "path": "/api/cron/sync-live", "schedule": "2-59/10 * * * *" }
  ],
  "functions": {
    "app/api/cron/sync/route.ts": { "maxDuration": 30 },
    "app/api/cron/compute/route.ts": { "maxDuration": 60 },
    "app/api/cron/sync-live/route.ts": { "maxDuration": 30 }
  }
}
